package room

import "github.com/markojerkic/spring-planing/cmd/web/components"

templ CreateRoom(isJiraUser bool) {
	@components.PageLayoutWithPath("Create Room", "/room") {
		<div style="max-width: 500px; margin: 0 auto;">
			@components.Card(components.CardProps{
				HasAccent: true,
				Title:     "Create a Sprint Gauge Room",
			}) {
				<form action="/room" method="POST">
					<div class="form-group">
						<label for="roomName" class="form-label">Room name</label>
						<input
							type="text"
							id="roomName"
							name="roomName"
							class="form-input"
							placeholder="Enter name of the room"
							required
						/>
						<div class="form-help-text">Choose a descriptive name for your planning session</div>
					</div>
					if isJiraUser {
						<div class="flex gap-2 items-center">
							<input type="checkbox" name="allowLLM" id="allowLLM" class="form-checkbox" aria-describedby="llm-help"/>
							<label for="allowLLM" class="form-label mb-0">Allow LLM estimation</label>
							<span
								class="material-symbols-outlined text-sm opacity-70 hover:opacity-100 transition-opacity cursor-default"
								title="Send description of Jira ticket to Google Gemini 2.5 flash for estimate recommendation. Can turn on and off later. Check Github for implementation."
							>
								info
							</span>
						</div>
					}
					<button type="submit" class="btn-sm-primary mt-2">Create room</button>
				</form>
			}
		</div>
	}
}
