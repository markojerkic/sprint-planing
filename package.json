{
	"name": "sprint-planing",
	"private": true,
	"scripts": {
		"build:tailwind": "tailwindcss -i ./input.css -o ./output.css",
		"dev:tailwind": "tailwindcss -w -i ./input.css -o ./cmd/web/assets/css/output.css",
		"dev:templ": "templ generate -watch",
		"dev:go": "bash ./run-go.sh",
		"format": "bunx prettier --write \"**/*.{js,ts,css}\"",
		"dev": "run-p -c --print-label dev:*",
		"postinstall": "simple-git-hooks"
	},
	"devDependencies": {
		"@prettier/plugin-xml": "^3.4.2",
		"@tailwindcss/cli": "^4.1.3",
		"@types/bun": "latest",
		"lint-staged": "^16.2.1",
		"npm-run-all": "^4.1.5",
		"simple-git-hooks": "^2.13.1",
		"tailwindcss": "^4.1.3"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"simple-git-hooks": {
		"pre-commit": "bunx lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,css}": "bunx prettier --write"
	}
}
